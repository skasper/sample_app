<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Update" %><br/>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <%= link_to "change", "http://gravatar.com/emails", :target => "_blank" %>
</div>

